{
  "tasks": {
    "start": "deno run -A --watch=static/,src/ src/server.ts",
    "generate-svg": "deno run -A ./scripts/generateSVGDictionary.ts --options-single-quote=true --options-no-semicolons=true"
  },
  "fmt": {
    "options": {
      "singleQuote": true,
      "indentWidth": 2,
      "semiColons": false
    }
  },
  "lint": {
    "rules": {
      "exclude": ["no-empty-interface"]
    }
  }
}
